<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomepage">

    <Button
        android:id="@+id/manageProductBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="81dp"
        android:backgroundTint="#3F51B5"
        android:text="Manage Product"
        app:layout_constraintBottom_toTopOf="@+id/managePackagetBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accountListBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/invoiceListBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="149dp"
        android:backgroundTint="#FF9800"
        android:text="Invoice List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/managePackagetBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountListBtn" />

    <Button
        android:id="@+id/managePackagetBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="149dp"
        android:backgroundTint="#FF5722"
        android:text="Manage Package"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/invoiceListBtn"
        app:layout_constraintTop_toBottomOf="@+id/manageProductBtn" />

    <Button
        android:id="@+id/accountListBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="81dp"
        android:backgroundTint="#12B3B2"
        android:text="Account List"
        app:layout_constraintBottom_toTopOf="@+id/invoiceListBtn"
        app:layout_constraintEnd_toStartOf="@+id/manageProductBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>