<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/packageNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Package 1"
        android:padding="10dp"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#BCEFF6"
        android:gravity="center"/>

    <TextView
        android:id="@+id/packtotalPriceRM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price : RM "
        android:textStyle="bold"
        android:layout_below="@+id/packageNum"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/packtotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packageNum"
        android:layout_toRightOf="@+id/packtotalPriceRM"
        android:text="100.00"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/packageItemRecyclerView"
        android:layout_below="@+id/packtotalPrice"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>







</androidx.cardview.widget.CardView>