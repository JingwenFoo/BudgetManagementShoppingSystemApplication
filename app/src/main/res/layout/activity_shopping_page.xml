<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ManageBudgetTracking.ShoppingPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="10dp"
        android:text="Welcome to"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="10dp"
        android:text=" Budget Management Shopping"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:padding="10dp"
        android:text="System Application"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="55dp">

        <Button
            android:id="@+id/viewPromotionBtn"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:text="Items on Promotion"
            android:textSize="18sp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"/>



        <Button
            android:id="@+id/packageSuggestBtn"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:text="Package Suggestion"
            android:textSize="18sp"
            android:backgroundTint="@color/teal_700"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/shoppingNowBtn"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:text="Shopping Now"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/ic_add_quantity_background"
        android:layout_marginLeft="10dp"/>




</LinearLayout>