<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/childrecyclerViewPackageItem"
        />


    <TextView
        android:id="@+id/totalPricePackageSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/childrecyclerViewPackageItem"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price : RM "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/totalPricePackageSelected"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/childrecyclerViewPackageItem"/>

    <Button
        android:id="@+id/saveToCartBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Save to Cart"
        android:layout_below="@+id/totalPricePackageSelected"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FF5722"/>

</RelativeLayout>