<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ManagePackageSuggestion.SelectCategory">

    <TextView
        android:id="@+id/PStitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items on Promotion"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/PSdescp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select items that you want"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/PStitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryitemRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PSdescp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="85dp"
        />

    <Button
        android:id="@+id/viewBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="View Promotion"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>