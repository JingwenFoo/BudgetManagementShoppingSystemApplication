<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageAccount.ViewProfile">

    <TextView
        android:id="@+id/profileTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewprofileCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="250dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profileTV"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/viewprofilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_icon"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:padding="10dp"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/viewprofileCard"/>

    <TextView
        android:id="@+id/edit_usernameText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewName"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Contact number: "
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_below="@+id/edit_usernameText"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_below="@+id/custPhone"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_below="@+id/custEmail"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/custUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="username"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:padding="10dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewName"/>

    <TextView
        android:id="@+id/custPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="phone"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_below="@+id/custUsername"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:id="@+id/custEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="email"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:padding="10dp"
        android:layout_below="@id/custPhone"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:id="@+id/custAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="address"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:padding="10dp"
        android:layout_below="@+id/custEmail"
        android:layout_marginLeft="150dp"/>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="500dp"/>
</RelativeLayout>