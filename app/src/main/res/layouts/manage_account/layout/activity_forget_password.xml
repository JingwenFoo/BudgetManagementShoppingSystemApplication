<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageAccount.ForgetPassword">

    <TextView
        android:id="@+id/forgetpasswordtextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password/Username?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/enterEmailTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your email registered"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@id/forgetpasswordtextview"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enterEmailTextview"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/editTextEmail"/>

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextEmail"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/selectAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your account"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/sendBtn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectAccountRecyclerView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/selectAccount"
        android:layout_centerHorizontal="true"/>






</RelativeLayout>