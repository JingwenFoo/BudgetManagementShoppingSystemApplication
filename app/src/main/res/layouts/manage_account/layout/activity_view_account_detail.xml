<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ManageAccount.ViewAccountDetail">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Information"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/custNameText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Customer Name:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="left"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/custIDText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Customer ID:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custNameText"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/custUsernameText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Customer Username:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custIDTextView"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/custContactText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Contact Number:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custUsernameText"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/custEmailText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custContactText"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/custAddText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custEmailTextView"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/custNameTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/custNameText"
        />
    <TextView
        android:id="@+id/custIDTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="id"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custNameText"
        android:layout_toRightOf="@+id/custIDText"
        />

    <TextView
        android:id="@+id/custUsernameTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/custIDTextView"
        android:layout_toRightOf="@+id/custUsernameText"
        />

    <TextView
        android:id="@+id/custContactTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="contact no"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custUsernameText"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/custContactText"
        />

    <TextView
        android:id="@+id/custEmailTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="email"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custContactText"
        android:layout_toRightOf="@+id/custEmailText"
        />

    <TextView
        android:id="@+id/custAddressTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="address"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="left"
        android:layout_below="@+id/custEmailTextView"
        android:layout_toRightOf="@+id/custAddText"
        />

    <TextView
        android:id="@+id/custPurchaseHistoryTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Purchase History"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/custAddressTextView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/searchInvTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search: "
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/custPurchaseHistoryTextView"/>

    <EditText
        android:id="@+id/searchInvoiceList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#80191818"
        android:hint="Search"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_below="@id/custPurchaseHistoryTextView"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/searchInvTextView"/>
    <TableLayout
        android:id="@+id/tableLayoutCustomerHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/searchInvoiceList"
        android:background="#f1f1f1">
        <TableRow>

            <TextView
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:text="Invoice ID"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:text="Date  Time"
                android:padding="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_weight="0.1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginLeft="10dp"
                android:text="Total Purchase"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custInvoiceListRecyclerView"
        android:layout_below="@+id/tableLayoutCustomerHistory"
        android:layout_marginLeft="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</RelativeLayout>