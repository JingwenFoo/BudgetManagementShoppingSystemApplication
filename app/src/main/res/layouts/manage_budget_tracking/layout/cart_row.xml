<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cartProductImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_refresh"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/cartProductName"
            android:layout_toRightOf="@+id/cartProductImg"
            android:text="Product Name"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/cartProductSellingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartProductName"
            android:text="0.00"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/cartProductSellingPriceRM"
           />

        <TextView
            android:id="@+id/cartProductSellingPriceRM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartProductName"
            android:text="RM "
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cartProductImg"
            />

        <TextView
            android:id="@+id/cartProductUnitPriceRM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartProductSellingPriceRM"
            android:text="@string/normal_price"
            android:textColor="#68000000"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cartProductImg"
            />

        <TextView
            android:id="@+id/cartProductDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartProductSellingPriceRM"
            android:text="discount"
            android:textColor="#FF5722"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cartProductUnitPriceRM"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:inputType="number"
            android:id="@+id/cartProductQuantity"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/cartProductName"
            />

        <TextView
            android:id="@+id/cartProductTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartProductName"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/cartDeleteBtn"
            android:layout_centerVertical="true"

           />

        <TextView
            android:id="@+id/cartProductTotalPriceRM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/cartProductTotalPrice"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"

   />

        <ImageButton
            android:id="@+id/cartDeleteBtn"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>